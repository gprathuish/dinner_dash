<div class="row">
<div class="col-sm-5">

	<h1>Login</h1>

	<%= form_tag(sessions_path) do %>
		<div class="form-group">
			<%= label_tag 'Email' %>
			<%= text_field_tag 'email','', class: "form-control", placeholder: "Email" %>		
		</div>
		<div class="form-group">
			<%= label_tag 'password' %>
			<%= password_field 'password','', class: "form-control", placeholder: "password" %>		
		</div>

		<div class="form-group">			
			<%= submit_tag 'Login', class: "btn btn-success" %>		
		</div>

	<% end %>
</div>	
</div>