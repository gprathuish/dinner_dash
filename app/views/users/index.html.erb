<%=  title 'Users' %>

<div class="table-responsive">
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Email</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Display Name</th>
			<th>Status</th>			
			<!-- <th>Edit</th> -->
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
	<% @users.each_with_index do |user,index|%>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= user.email %></td>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= user.display_name %></td>							
			<td>
				<%= link_to status_toggle_user_path(user.id) do %>
					<div>
						<% if user.status %>
							<span class="fa fa-check-circle fa-2x green"></span>
						<%else%>
							<span class="fa fa-times-circle fa-2x red"></span>
						<%end%>
						
					</div>
				<% end %>		
			</td>
			<!-- <td><%# link_to 'Edit', edit_user_path(user.id), class: "btn btn-info btn-xs" %></td> -->
			<td><%= link_to 'Delete', user_path(user.id), method: :delete, class: "btn btn-danger btn-xs" %></td>
		</tr>
		<%end%>
	</tbody>
	<tfoot></tfoot>
</table>
</div>