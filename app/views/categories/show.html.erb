<%= title "Add - Categories"%>

<%= link_to(new_category_path, class: 'btn btn-success btn-circle btn-lg', id: "mybutton") do %>
  <i class="fa fa-plus"></i>
<% end %>

<h2><%= @category.name.capitalize%></h2>
<%= link_to 'Edit', edit_category_path(@category.id), class: "btn btn-info btn-sm" %> 
<%= link_to 'Delete', category_path(@category.id), method: :delete,class: "btn btn-danger btn-sm" %> 
<%= link_to 'Back', categories_path, class: "btn btn-default btn-sm" %>
