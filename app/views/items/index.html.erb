<%=  title 'Items' %>

<%= render 'link_to_new' %>

<div class="table-responsive">
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Image</th>
			<th>Title</th>
			<th>Category</th>
			<th>Price</th>
			<th>Description</th>			
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
	<% @items.each_with_index do |item|%>
		<tr>
			<td><%=  %></td>
			<td><%=image_tag item.pictures.first.picture_url, size: '25x25' if item.pictures.present? %></td>

			<td><%= link_to item.title, item_path(item.id) %></td>
			<td><%= item.categories.map(&:name).join(", ") %></td>
			<td><%= number_to_currency(item.price, unit: "Rs", format: "%u %n") %></td>
							
			<td><%= truncate(item.description, length: 25) %></td>
			<td><%= link_to 'Edit', edit_item_path(item.id), class: "btn btn-info btn-xs" %></td>
			<td><%= link_to 'Delete', item_path(item.id), method: :delete,class: "btn btn-danger btn-xs" %></td>
		</tr>
		<%end%>
	</tbody>
	<tfoot></tfoot>
</table>
</div>